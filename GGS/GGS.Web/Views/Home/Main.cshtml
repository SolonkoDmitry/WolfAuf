<body>
    <header>
        <div class="logo"><a href="MainPage.html" target="_self"><img src="~/Images/Logo.jpg" alt="Logotim" width="15%" height="15%"></a></div> <!--Логотип -->

        <div id="enter">
            <form method="post" action="">
                <a href="/Home/Login" target="_self"><span class="enter_or_autentification">  Вход </span></a> <a href="Autentification.html" target="_self"><span class="enter_or_autentification"> Регистрация </span></a>  <!--Вход/выход или аутентификация -->


            </form>
        </div>
        <div class="search">
            <form method="post" action="">
                <p class="p1">
                    <input type="search" name="Search" placeholder="Поиск по магазину" class="search_text">  <!--Поисковая строчка -->
                    <button type="submit" value="" name="Search" class="search_sumbit"></button>
                </p>
            </form>
        </div>
        <nav>

            <form method="post" action="">
                <div class="menbar"><a href="#" target="_self"><span class="menubar1"> Личный кабинет  </span></a> <a href="Basket.html" target="_self"><span class="menubar2"> Корзина</span></a></div>


            </form>

        </nav>

        <nav>
            <form method="post" action="">
                <div class="mainmenubar">
                    <a href="MainPage.html" target="_self"><span class="mainmenubar1	">  Главная  </span></a>
                    <a href="#" target="_self"><span class="mainmenubar1	">  Новинки  </span></a>
                    <a href="#" target="_self"><span class="mainmenubar1	"> Предзаказ  </span></a>
                    <a href="#" target="_self"><span class="mainmenubar1	"> Скидки  </span></a>

                </div>

            </form>

        </nav>

    </header>

    <article>
        <section>
