@model GGS.Web.Models.CartIndexViewModel

@{
    ViewBag.Title = "GGS: ваша корзина";
}
<head>
    <style>
        .text-right{
            color:red;
           
        }
        .button{
            border:3px White groove;
            background:white;
            border-radius:4px;
        }
    </style>
</head>

<h2>Ваша корзина</h2>
<table class="table">
    <thead>
        <tr>
            <th>Кол-во</th>
            <th>Игра</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Общая цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Game.Name</td>
                <td class="text-right">@line.Game.PriceRub.ToString("# руб")</td>
                <td class="text-right">
                    @((line.Quantity * line.Game.PriceRub).ToString("# руб"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого:</td>
            <td class="text-right">
                @Model.Cart.ComputeTotalValue().ToString("# руб")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <span class="button"> @Html.ActionLink("Продолжить покупки", "Main", "Home") </span>
</div>